{% extends "main.html.twig" %}

{% block title %}{{ 'groups.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('groups') }}">{{ 'groups.label'|trans }}</a> </li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">{{ group.name }}</div>

        <table class="table table-striped table-hover">
            <colgroup>
                <col />
                <col class="column-lg" />
            </colgroup>

            <thead>
            <tr>
                <th>{{ 'label.name'|trans }}</th>
                <th>{{ 'label.email'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for user in group.members %}
                <tr>
                    <td>{{ user|user }}</td>
                    <td>
                        <a href="mailto:{{ user.lastname}}, {{ user.firstname }} <{{ user.email }}>"><i class="fas fa-envelope"></i> {{ user.email }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="buttons">
        <a href="{{ path('groups') }}" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> {{ 'actions.back'|trans }}
        </a>

        <a href="mailto: {% for user in group.members %}{{ user.lastname }}, {{ user.firstname }} <{{ user.email }}>{% if not loop.last %}; {% endif %}{% endfor %}" class="btn btn-secondary btn-sm">
            <i class="fas fa-mail-bulk"> </i> {{ 'groups.mail'|trans }}
        </a>

        {% if is_granted('edit', group) %}
            <a href="{{ path('edit_group', { id: group.id }) }}" class="btn btn-secondary btn-sm">
                <i class="fas fa-edit"> </i> {{ 'actions.edit'|trans }}
            </a>
        {% endif %}
    </div>
{% endblock %}