{% extends "main.html.twig" %}

{% block title %}{{ 'preferences.language.label'|trans }}{% endblock %}

{% block content %}

    {{ form_start(form) }}

    <div class="card">
        <div class="card-header">{{ 'preferences.language.label'|trans }}</div>

        <div class="card-body">
            {{ form_widget(form) }}
        </div>
    </div>

    <div class="buttons">
        <button type="submit" class="btn btn-sm btn-primary">
            <i class="fas fa-save"></i> {{ 'actions.save'|trans }}
        </button>
    </div>

    {{ form_end(form) }}
{% endblock %}