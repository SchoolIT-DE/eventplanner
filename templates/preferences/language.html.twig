{% extends "main.html.twig" %}

{% block title %}{{ 'preferences.language.label'|trans }}{% endblock %}

{% block content %}

    {{ form_start(form) }}

    <div class="contentbox">
        <h4>{{ 'preferences.language.label'|trans }}</h4>

        {{ form_widget(form) }}
    </div>

    <div class="buttons">
        <button type="submit" class="btn btn-sm btn-primary">
            <i class="fa fa-save"></i> {{ 'actions.save'|trans }}
        </button>
    </div>

    {{ form_end(form) }}
{% endblock %}