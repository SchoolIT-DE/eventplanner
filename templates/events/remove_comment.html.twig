{% extends "main.html.twig" %}

{% block title %}{{ 'event.comments.remove.label'|trans }}{% endblock %}

{% block content %}

    {{ form_start(form) }}

    <div class="contentbox">
        <h4>{{ 'actions.confirm_remove'|trans }}</h4>

        {{ form_widget(form) }}
    </div>

    <div class="buttons">
        <button type="submit" class="btn btn-sm btn-danger">
            <i class="fa fa-trash"></i> {{ 'actions.remove'|trans }}
        </button>

        <a href="{{ path('show_event', { id: event.id }) }}" class="btn btn-sm btn-secondary">
            {{ 'actions.cancel'|trans }}
        </a>
    </div>

    {{ form_end(form) }}
{% endblock %}