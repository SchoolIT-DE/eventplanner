{% extends "main.html.twig" %}

{% block title %}{{ 'messages.remove.label'|trans }}{% endblock %}

{% block content %}

    {{ form_start(form) }}

    <div class="card">
        <div class="card-header">{{ 'label.confirm'|trans }}</div>

        <div class="card-body">
            {{ form_widget(form) }}
        </div>
    </div>

    <div class="buttons">
        <button type="submit" class="btn btn-sm btn-danger">
            <i class="fas fa-trash"></i> {{ 'actions.remove'|trans }}
        </button>

        <a href="{{ path('events') }}" class="btn btn-sm btn-secondary">
            {{ 'actions.cancel'|trans }}
        </a>
    </div>

    {{ form_end(form) }}
{% endblock %}