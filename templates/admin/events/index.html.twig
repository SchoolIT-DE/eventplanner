{% extends "main.html.twig" %}

{% block title %}{{ 'manage_events.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}

    {% for group in groups %}
        <div class="card">
            <div class="card-header">{{ group.key }} <span class="badge badge-secondary badge-pill">{{ group.items|length }}</span> </div>

            <table class="table table-striped table-hover">
                <colgroup>
                    <col />
                    <col class="column-lg" />
                    <col class="column-md" />
                    <col class="column-lg" />
                    <col class="column-lg" />
                </colgroup>

                <thead>
                <tr>
                    <th>{{ 'label.name'|trans }}</th>
                    <th>{{ 'label.groups'|trans }}</th>
                    <th>{{ 'label.date_time'|trans }}</th>
                    <th>{{ 'event.person'|trans }}</th>
                    <th>{{ 'actions.label'|trans }}</th>
                </tr>
                </thead>

                <tbody>
                {% for event in group.items %}
                    <tr>
                        <td><a href="{{ path('show_event', { id: event.id }) }}">{{ event.name }}</a></td>
                        <td>
                            {% for group in event.groups %}<a href="{{ path('show_group', { id: group.id }) }}">{{ group.name }}</a>{% if not loop.last %}, {% endif %}{% endfor %}
                        </td>
                        <td>{{ event.start|shortdate }}</td>
                        <td>{{ event.createdBy|user }}</td>
                        <td>
                            <a href="{{ path('edit_event', { id: event.id }) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> {{ 'actions.edit'|trans }}
                            </a>

                            <a href="{{ path('remove_event', { id: event.id }) }}" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> {{ 'actions.remove'|trans }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endfor %}

    <div class="buttons">
        <a href="{{ path('add_event') }}" class="btn btn-sm btn-primary">
            <i class="fas fa-plus"></i> {{ 'manage_events.add.label'|trans }}
        </a>
    </div>
{% endblock %}