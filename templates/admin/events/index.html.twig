{% extends "main.html.twig" %}

{% block title %}{{ 'manage_groups.label'|trans }}{% endblock %}

{% block content %}

    {% for group in groups %}
        <div class="contentbox">
            <h4>{{ group.key }}</h4>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <colgroup>
                        <col />
                        <col class="column-lg" />
                        <col class="column-md" />
                        <col class="column-lg" />
                        <col class="column-lg" />
                    </colgroup>

                    <thead>
                    <tr>
                        <th>{{ 'label.name'|trans }}</th>
                        <th>{{ 'label.groups'|trans }}</th>
                        <th>{{ 'label.date_time'|trans }}</th>
                        <th>{{ 'event.person'|trans }}</th>
                        <th>{{ 'actions.label'|trans }}</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for event in group.items %}
                        <tr>
                            <td><a href="{{ path('show_event', { id: event.id }) }}">{{ event.name }}</a></td>
                            <td>
                                {% for group in event.groups %}<a href="{{ path('show_group', { id: group.id }) }}">{{ group.name }}</a>{% if not loop.last %}, {% endif %}{% endfor %}
                            </td>
                            <td>{{ event.start|shortdate }}</td>
                            <td>{{ event.createdBy|user }}</td>
                            <td>
                                <a href="{{ path('edit_event', { id: event.id }) }}" class="btn btn-primary btn-sm">
                                    <i class="fa fa-edit"></i> {{ 'actions.edit'|trans }}
                                </a>

                                <a href="{{ path('remove_event', { id: event.id }) }}" class="btn btn-danger btn-sm">
                                    <i class="fa fa-trash"></i> {{ 'actions.remove'|trans }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endfor %}

    <div class="buttons">
        <a href="{{ path('add_event') }}" class="btn btn-sm btn-primary">
            <i class="fa fa-plus"></i> {{ 'manage_events.add.label'|trans }}
        </a>
    </div>
{% endblock %}